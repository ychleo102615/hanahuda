            { "type": "keyword-en", "content": "continue (Koi-Koi)" },
            { "type": "text", "content": " or " },
            { "type": "keyword-en", "content": "stop" },
            { "type": "text", "content": "." }
          ]
        },
        {
          "title": "Round End",
          "content": [
            { "type": "text", "content": "The round ends when a player stops or all cards are played." }
          ]
        },
        {
          "title": "Scoring",
          "content": [
            { "type": "text", "content": "Calculate points based on " },
            { "type": "keyword-en", "content": "Yaku" },
            { "type": "text", "content": " formed. If you called " },
            { "type": "keyword-en", "content": "Koi-Koi" },
            { "type": "text", "content": " and opponent scores first, you get " },
            { "type": "keyword-en", "content": "0 points" },
            { "type": "text", "content": " and opponent " },
            { "type": "keyword-en", "content": "doubles" },
            { "type": "text", "content": " their score." }
          ]
