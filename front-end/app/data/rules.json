        [
          { "type": "text", "content": "If you choose to continue and your opponent forms a " },
          { "type": "keyword-en", "content": "Yaku" },
          { "type": "text", "content": " first, your score becomes " },
          { "type": "keyword-en", "content": "0" },
          { "type": "text", "content": " and your opponent's score " },
          { "type": "keyword-en", "content": "doubles" },
          { "type": "text", "content": "." }
        ],
        [
          { "type": "text", "content": "If your total score is " },
          { "type": "keyword-en", "content": "7 or more points" },
          { "type": "text", "content": ", your final score " },
          { "type": "keyword-en", "content": "doubles" },
          { "type": "text", "content": "." }
        ],
        [
          { "type": "text", "content": "After " },
          { "type": "keyword-en", "content": "12 rounds" },
          { "type": "text", "content": ", the player with the highest total score wins." }
