      "id": "game-objective",
      "title": "Game Objective",
      "defaultExpanded": true,
      "sections": [
        {
          "type": "rich-paragraph",
          "spans": [
            { "type": "text", "content": "The goal of " },
            { "type": "keyword-en", "content": "Koi-Koi" },
            { "type": "text", "content": " (" },
            { "type": "keyword-ja", "content": "こいこい" },
            { "type": "text", "content": ") is to form " },
            { "type": "keyword-en", "content": "Yaku" },
            { "type": "text", "content": " (" },
            { "type": "keyword-ja", "content": "役" },
            { "type": "text", "content": ", scoring combinations) by capturing cards from the playing field." }
          ]
        },
        {
          "type": "rich-paragraph",
          "spans": [
            { "type": "text", "content": "When you form a " },
            { "type": "keyword-en", "content": "Yaku" },
            { "type": "text", "content": ", you can choose to:" }
          ]
        },
        {
          "type": "list",
          "items": [
            [
              { "type": "keyword-en", "content": "Continue (Koi-Koi)" },
              { "type": "text", "content": ": Keep playing to form more " },
              { "type": "keyword-en", "content": "Yaku" },
              { "type": "text", "content": " and multiply your score." }
            ],
            [
              { "type": "keyword-en", "content": "Stop" },
              { "type": "text", "content": ": End the round and claim your current points." }
            ]
          ]
        },
        {
          "type": "rich-paragraph",
          "spans": [
            { "type": "text", "content": "Be careful! If you choose to continue and your opponent forms a " },
            { "type": "keyword-en", "content": "Yaku" },
            { "type": "text", "content": " first, you lose all your points and they " },
            { "type": "keyword-en", "content": "double" },
            { "type": "text", "content": " their score." }
          ]
        }
      ]
    },
