      "title": "How to Play",
      "defaultExpanded": false,
      "steps": [
        {
          "title": "Setup",
          "content": [
            { "type": "text", "content": "Deal " },
            { "type": "keyword-en", "content": "8 cards" },
            { "type": "text", "content": " to each player, place " },
            { "type": "keyword-en", "content": "8 cards" },
            { "type": "text", "content": " face-up on the field." }
          ]
        },
        {
          "title": "Turn",
          "content": [
            { "type": "text", "content": "On your turn:" }
          ],
          "subItems": [
            [
              { "type": "text", "content": "Play one card from your hand. If it " },
              { "type": "keyword-en", "content": "matches the month" },
              { "type": "text", "content": " of a card on the field, capture both cards." }
            ],
            [
              { "type": "text", "content": "Draw one card from the deck. If it matches a card on the field, capture both cards." }
            ]
          ]
        },
        {
          "title": "Matching",
          "content": [
            { "type": "text", "content": "Cards match if they belong to the same " },
            { "type": "keyword-en", "content": "month" },
            { "type": "text", "content": " (same flower/plant)." }
          ]
        },
        {
          "title": "Decision",
          "content": [
            { "type": "text", "content": "After forming a " },
            { "type": "keyword-en", "content": "Yaku" },
