{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hanahuda.example.com/schemas/integration-events.json",
  "title": "Hanahuda Integration Events Schema",
  "description": "JSON Schema definitions for integration events between game-engine and game-ui Bounded Contexts (Optimized)",
  "version": "2.0.0",
  "definitions": {
    "IntegrationEvent": {
      "type": "object",
      "description": "Base integration event that all events inherit from",
      "required": ["eventId", "eventType", "timestamp", "sequenceNumber"],
      "properties": {
        "eventId": {
          "type": "string",
          "format": "uuid",
          "description": "Unique identifier for this event"
        },
        "eventType": {
          "type": "string",
          "description": "Event type in PastTense format"
        },
        "timestamp": {
          "type": "number",
          "minimum": 0,
          "description": "Unix timestamp in milliseconds"
        },
        "sequenceNumber": {
          "type": "integer",
          "minimum": 1,
          "description": "Sequential number for event ordering and loss detection"
        }
      }
    },
    "YakuResult": {
      "type": "object",
      "description": "Yaku achievement result",
      "required": ["yaku", "points", "cardIds"],
      "properties": {
        "yaku": {
          "type": "string",
          "enum": ["GOKO", "SHIKO", "AME_SHIKO", "SANKO", "INOSHIKACHO", "AKA_TAN", "AO_TAN", "TANE", "TAN", "KASU"],
          "description": "Yaku type"
        },
        "points": {
          "type": "number",
          "minimum": 1,
          "description": "Points for this yaku"
        },
        "cardIds": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Card IDs that compose this yaku"
        }
      }
    },
    "MatchResult": {
      "type": "object",
      "description": "Card matching result (hand or deck card)",
      "required": ["sourceCardId", "sourceType", "matchType"],
      "properties": {
        "sourceCardId": {
          "type": "string",
          "description": "Source card ID (hand or deck)"
        },
        "sourceType": {
          "type": "string",
          "enum": ["hand", "deck"],
          "description": "Source type"
        },
        "matchType": {
          "type": "string",
          "enum": ["no_match", "single_match", "multiple_matches"],
          "description": "Match type"
        },
        "matchedFieldCardId": {
          "type": "string",
          "description": "Matched field card ID (for single_match)"
        },
        "capturedCardIds": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Captured card IDs (includes source and matched cards)"
        },
        "selectableFieldCardIds": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Selectable field card IDs (for multiple_matches, requires player selection)"
        },
        "selectedFieldCardId": {
          "type": "string",
          "description": "Selected field card ID (null if not yet selected)"
        },
        "autoSelected": {
          "type": "boolean",
          "description": "Whether the selection was automatic (timeout)"
        },
        "selectionTimeout": {
          "type": "integer",
          "minimum": 0,
          "description": "Selection timeout in milliseconds (for multiple_matches)"
        },
        "achievedYaku": {
          "type": "array",
          "items": { "$ref": "#/definitions/YakuResult" },
          "description": "Yaku achieved after this match"
        }
      }
    },
    "TurnTransition": {
      "type": "object",
      "description": "Turn transition information",
      "required": ["previousPlayerId", "currentPlayerId", "reason"],
      "properties": {
        "previousPlayerId": {
          "type": ["string", "null"],
          "description": "Previous player ID (null for game initialization)"
        },
        "currentPlayerId": {
          "type": "string",
          "description": "Current player ID"
        },
        "reason": {
          "type": "string",
          "enum": ["game_initialized", "card_played", "koikoi_declared"],
          "description": "Reason for turn transition"
        }
      }
    },
    "GameInitializedEvent": {
      "allOf": [
        { "$ref": "#/definitions/IntegrationEvent" },
        {
          "type": "object",
          "description": "Game initialization event with full state snapshot",
          "required": ["gameState", "cardDefinitions", "turnTransition"],
          "properties": {
            "eventType": { "const": "GameInitialized" },
            "gameState": {
              "type": "object",
              "required": ["gameId", "currentRound", "phase", "currentPlayerId", "players", "fieldCardIds", "deckCardCount", "koikoiPlayerId"],
              "properties": {
                "gameId": { "type": "string" },
                "currentRound": { "type": "integer", "minimum": 1, "maximum": 12 },
                "phase": {
                  "type": "string",
                  "enum": ["setup", "dealing", "playing", "koikoi", "round_end", "game_end"]
                },
                "currentPlayerId": { "type": "string" },
                "players": {
                  "type": "array",
                  "minItems": 2,
                  "maxItems": 2,
                  "items": {
                    "type": "object",
                    "required": ["id", "name", "handCardIds", "capturedCardIds", "totalScore", "roundScore"],
                    "properties": {
                      "id": { "type": "string" },
                      "name": { "type": "string" },
                      "handCardIds": {
                        "type": "array",
                        "items": { "type": "string" }
                      },
                      "capturedCardIds": {
                        "type": "array",
                        "items": { "type": "string" }
                      },
                      "totalScore": { "type": "number", "minimum": 0 },
                      "roundScore": { "type": "number", "minimum": 0 }
                    }
                  }
                },
                "fieldCardIds": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "deckCardCount": { "type": "integer", "minimum": 0 },
                "koikoiPlayerId": { "type": ["string", "null"] }
              }
            },
            "cardDefinitions": {
              "type": "array",
              "minItems": 48,
              "maxItems": 48,
              "items": {
                "type": "object",
                "required": ["id", "suit", "type", "points"],
                "properties": {
                  "id": { "type": "string", "pattern": "^\\d{1,2}-(bright|animal|ribbon|plain)-\\d$" },
                  "suit": { "type": "integer", "minimum": 1, "maximum": 12 },
                  "type": {
                    "type": "string",
                    "enum": ["bright", "animal", "ribbon", "plain"]
                  },
                  "points": {
                    "type": "integer",
                    "enum": [1, 5, 10, 20]
                  }
                }
              }
            },
            "turnTransition": {
              "$ref": "#/definitions/TurnTransition",
              "description": "Initial turn information"
            }
          }
        }
      ]
    },
    "CardPlayedEvent": {
      "allOf": [
        { "$ref": "#/definitions/IntegrationEvent" },
        {
          "type": "object",
          "description": "Player played a card from hand with complete match results",
          "required": ["playerId", "playedCardId", "handMatch", "deckMatch"],
          "properties": {
            "eventType": { "const": "CardPlayed" },
            "playerId": { "type": "string" },
            "playedCardId": { "type": "string" },
            "handMatch": {
              "$ref": "#/definitions/MatchResult",
              "description": "Hand card match result"
            },
            "deckMatch": {
              "$ref": "#/definitions/MatchResult",
              "description": "Deck card match result"
            },
            "turnTransition": {
              "oneOf": [
                { "$ref": "#/definitions/TurnTransition" },
                { "type": "null" }
              ],
              "description": "Turn transition (null if waiting for player selection)"
            }
          }
        }
      ]
    },
    "MatchSelectedEvent": {
      "allOf": [
        { "$ref": "#/definitions/IntegrationEvent" },
        {
          "type": "object",
          "description": "Player completed multiple match selection (or timeout auto-selected)",
          "required": ["playerId", "sourceCardId", "selectedFieldCardId", "autoSelected", "capturedCardIds"],
          "properties": {
            "eventType": { "const": "MatchSelected" },
            "playerId": { "type": "string" },
            "sourceCardId": {
              "type": "string",
              "description": "Source card ID (deck card in multiple match scenario)"
            },
            "selectedFieldCardId": {
              "type": "string",
              "description": "Selected field card ID"
            },
            "autoSelected": {
              "type": "boolean",
              "description": "Whether auto-selected due to timeout"
            },
            "capturedCardIds": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Captured card IDs after selection"
            },
            "achievedYaku": {
              "type": "array",
              "items": { "$ref": "#/definitions/YakuResult" },
              "description": "Yaku achieved after this match"
            },
            "turnTransition": {
              "$ref": "#/definitions/TurnTransition",
              "description": "Turn transition after selection"
            }
          }
        }
      ]
    },
    "KoikoiDeclaredEvent": {
      "allOf": [
        { "$ref": "#/definitions/IntegrationEvent" },
        {
          "type": "object",
          "description": "Player declared koikoi or shobu",
          "required": ["playerId", "declared"],
          "properties": {
            "eventType": { "const": "KoikoiDeclared" },
            "playerId": { "type": "string" },
            "declared": {
              "type": "boolean",
              "description": "true = koikoi (continue), false = shobu (end round)"
            },
            "turnTransition": {
              "oneOf": [
                { "$ref": "#/definitions/TurnTransition" },
                { "type": "null" }
              ],
              "description": "Turn transition (null if shobu - round ends)"
            }
          }
        }
      ]
    },
    "RoundEndedEvent": {
      "allOf": [
        { "$ref": "#/definitions/IntegrationEvent" },
        {
          "type": "object",
          "description": "Round ended with result",
          "required": ["winnerId", "roundResult"],
          "properties": {
            "eventType": { "const": "RoundEnded" },
            "winnerId": {
              "type": ["string", "null"],
              "description": "Winner ID or null for draw"
            },
            "roundResult": {
              "type": "object",
              "required": ["round", "playerResults", "koikoiDeclared", "koikoiPlayerId"],
              "properties": {
                "round": { "type": "integer", "minimum": 1, "maximum": 12 },
                "playerResults": {
                  "type": "array",
                  "minItems": 2,
                  "maxItems": 2,
                  "items": {
                    "type": "object",
                    "required": ["playerId", "yakuResults", "baseScore", "multiplier", "finalScore"],
                    "properties": {
                      "playerId": { "type": "string" },
                      "yakuResults": {
                        "type": "array",
                        "items": { "$ref": "#/definitions/YakuResult" }
                      },
                      "baseScore": { "type": "number", "minimum": 0 },
                      "multiplier": { "type": "number", "enum": [1, 2] },
                      "finalScore": { "type": "number", "minimum": 0 }
                    }
                  }
                },
                "koikoiDeclared": { "type": "boolean" },
                "koikoiPlayerId": { "type": ["string", "null"] }
              }
            }
          }
        }
      ]
    },
    "GameEndedEvent": {
      "allOf": [
        { "$ref": "#/definitions/IntegrationEvent" },
        {
          "type": "object",
          "description": "Game ended with final result",
          "required": ["winnerId", "reason", "finalResult"],
          "properties": {
            "eventType": { "const": "GameEnded" },
            "winnerId": {
              "type": ["string", "null"],
              "description": "Winner ID or null for draw"
            },
            "reason": {
              "type": "string",
              "enum": ["all_rounds_completed", "player_abandoned"]
            },
            "finalResult": {
              "type": "object",
              "required": ["playerFinalScores", "roundsPlayed"],
              "properties": {
                "playerFinalScores": {
                  "type": "array",
                  "minItems": 2,
                  "maxItems": 2,
                  "items": {
                    "type": "object",
                    "required": ["playerId", "totalScore", "roundsWon"],
                    "properties": {
                      "playerId": { "type": "string" },
                      "totalScore": { "type": "number", "minimum": 0 },
                      "roundsWon": { "type": "integer", "minimum": 0 }
                    }
                  }
                },
                "roundsPlayed": { "type": "integer", "minimum": 1, "maximum": 12 }
              }
            }
          }
        }
      ]
    },
    "GameAbandonedEvent": {
      "allOf": [
        { "$ref": "#/definitions/IntegrationEvent" },
        {
          "type": "object",
          "description": "Player abandoned the game",
          "required": ["abandonedPlayerId", "winnerId", "currentRound", "phase"],
          "properties": {
            "eventType": { "const": "GameAbandoned" },
            "abandonedPlayerId": { "type": "string" },
            "winnerId": { "type": "string" },
            "currentRound": { "type": "integer", "minimum": 1, "maximum": 12 },
            "phase": { "type": "string" }
          }
        }
      ]
    }
  }
}
